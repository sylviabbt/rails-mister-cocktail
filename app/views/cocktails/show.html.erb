<h1>favorite cocktails</h1>
<h1><%= @cocktail.name %></h1>

<p>what's inside:</p>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> - <%= dose.description %></p>
<%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } do %> <i class="fas fa-heart-broken"></i> <% end %>
<% end %>

<%= render 'doses/form', dose: @dose %>

