<h1>my cocktails' list</h1>

<div class="grid">
  <% @cocktails.each do |c| %>
    <div class="card bg-dark text-white">
      <img src="https://pixel.nymag.com/imgs/daily/grub/2018/05/01/bony-margaritas/bony-margaritas-madre-mezcaleria.w710.h473.2x.jpg" class="card-img" alt="...">
      <div class="card-img-overlay">
        <h5 class="card-title"><%= c.name %></h5>
        <p class="card-text"></p>
        <p class="card-text"><%= link_to 'more info', cocktail_path(c) %></p>
      </div>
    </div>
      <% end %>
</div>

